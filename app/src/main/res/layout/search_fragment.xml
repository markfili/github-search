<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="searchResults"
            type="hr.mfllipovic.github.entities.SearchResults" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".screens.search.SearchFragment">

        <LinearLayout
            android:id="@+id/search_results_info_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/search_result_count_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Count:" />

            <TextView
                android:id="@+id/search_result_count_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text='@{searchResults.items.size() + " out of " + searchResults.totalCount}' />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/search_results_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/search_results_info_view" />

        <TextView
            android:id="@+id/search_results_empty_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Use the search bar to find repositories"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>